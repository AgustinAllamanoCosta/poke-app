{
  "name": "back",
  "version": "0.0.4",
  "description": "backend for the cookUnity challenge",
  "author": "agustin.allamano@gmail.com",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "release": "standard-version",
    "vault:add": "npx dotenv-vault new",
    "vault:login": "npx dotenv-vault@latest login",
    "vault:open": "npx dotenv-vault@latest open",
    "vault:build": "npx dotenv-vault@latest build",
    "vault:keys": "npx dotenv-vault keys",
    "vault:pull": "npx dotenv-vault@latest pull",
    "vault:push": "npx dotenv-vault@latest push",
    "typeorm": "npx typeorm-ts-node-commonjs",
    "sch:sync": "yarn typeorm schema:sync -d ./datanase.config.ts",
    "mig:run": "yarn typeorm migration:run -d ./database.config.ts",
    "mig:gen": "yarn typeorm migration:generate -d ./database.config.ts"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.8",
    "@nestjs/config": "^3.2.2",
    "@nestjs/core": "^10.0.0",
    "@nestjs/platform-express": "^10.0.0",
    "@nestjs/swagger": "^7.3.1",
    "@nestjs/typeorm": "^10.0.2",
    "@types/dockerode": "^3.3.29",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dockerode": "^4.0.2",
    "dotenv-vault": "^1.26.1",
    "google-auth-library": "^9.10.0",
    "pg": "^8.11.5",
    "reflect-metadata": "^0.2.0",
    "rimraf": "^5.0.7",
    "rxjs": "^7.8.1",
    "standard-version": "^9.5.0",
    "typeorm": "^0.3.20"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.0.0",
    "@nestjs/schematics": "^10.0.0",
    "@nestjs/testing": "^10.0.0",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.3.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.42.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^29.5.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
